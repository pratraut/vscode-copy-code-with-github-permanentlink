{
  "name": "vscode-githublinker-with-markdown",
  "displayName": "vscode-githublinker-with-markdown",
  "description": "Copies GitHub permalink of active file (name and line(s)) along with the selected text in markdown to clipboard on VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.73.1"
  },
  "publisher": "pratraut",
  "repository": "https://github.com/pratraut/vscode-githublinker-with-markdown/",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:githublinker-with-markdown.copyLink",
    "onCommand:githublinker-with-markdown.copyMarkdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "when": "editorTextFocus || editorHasSelection",
        "command": "githublinker-with-markdown.copyLink",
        "title": "GitHub Linker with Markdown: Copy link to selection"
      },
      {
        "when": "editorTextFocus || editorHasSelection",
        "command": "githublinker-with-markdown.copyMarkdown",
        "title": "GitHub Linker with Markdown: Copy link to selection and code as markdown"
      }
    ],
    "menus": {
        "editor/context": [
            {
                "when": "editorTextFocus || editorHasSelection",
                "command": "githublinker-with-markdown.copyLink",
                "group": "9_cutcopypaste"
            },
            {
                "when": "editorTextFocus || editorHasSelection",
                "command": "githublinker-with-markdown.copyMarkdown",
                "group": "9_cutcopypaste"
            }
        ]
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "jest",
    "publish-extension": "echo 'visit https://code.visualstudio.com/api/working-with-extensions/publishing-extension'"
  },
  "devDependencies": {
    "@types/jest": "29.2.3",
    "@types/node": "18.11.9",
    "@types/vscode": "1.73.1",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "@vscode/test-electron": "2.2.0",
    "eslint": "8.28.0",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "normalize-git-url": "^3.0.2",
    "upath": "^2.0.1"
  }
}
